{% extends 'Front/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between">
            <h2  class="mt-3 mb-4">Nos Meilleurs<span class="span-green"> Produits </span></h2>
        </div>
        <div class="row  ">
            {% for productIteration in products %}
                <div class="col-lg-4 col-md-12">
                    {% include 'Front/partials/cardProduct.html.twig' with {
                        'product': productIteration
                    } %}
                </div>
            {% endfor %}
        </div>
        <div class="navigation d-flex justify-content-center mt-2">
            {{ knp_pagination_render(products) }}
        </div>
    </div>
{% endblock %}
