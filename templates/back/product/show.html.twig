{% extends 'back/base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>QuantityInStock</th>
                <td>{{ product.quantityInStock }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ product.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PriceHt</th>
                <td>{{ product.priceHt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_index') }}">back to list</a>

    <a href="{{ path('app_back_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('back/product/_delete_form.html.twig') }}
{% endblock %}
