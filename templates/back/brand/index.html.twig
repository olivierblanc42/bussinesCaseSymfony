{% extends 'back/base.html.twig' %}

{% block title %}Brand Index {% endblock %}

{% block body %}
    <h1>Brand index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>         {{
                    knp_pagination_sortable(
                        brands,
                        'Nom',
                        'brand.label'
                    )|raw
                    }}</th>
                <th>Nombre de produits</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>

                <td>{{ brand.label }}</td>
                <td></td>
                <td>
                    <a href="{{ path('app_back_brand_show', {'id': brand.id}) }}">
                        <i class="fa-solid fa-circle-info"></i>
                    </a>
                    <a href="{{ path('app_back_brand_edit', {'id': brand.id}) }}">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation d-flex justify-content-center mt-2">
        {{ knp_pagination_render(brands) }}
    </div>
    <a href="{{ path('app_back_brand_new') }}">Create new</a>
{% endblock %}
